{
  "name": "markup-it",
  "version": "11.1.8",
  "description": "Pipeline for working with markup input (for example Markdown)",
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "scripts": {
    "lint": "eslint .",
    "build": "rm -rf lib/ && rollup --config rollup.config.js",
    "prepare": "yarn run build",
    "prepublishOnly": "yarn run build",
    "test": "jest"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "__fixtures__"
    ]
  },
  "files": [
    "lib",
    "bin",
    "*.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GitbookIO/markup-it.git"
  },
  "keywords": [
    "slate",
    "markdown",
    "gitbook"
  ],
  "author": "Samy Pesse <samy@gitbook.com>",
  "contributors": [
    "Johan Preynat <johan.preynat@gmail.com>"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/GitbookIO/markup-it/issues"
  },
  "homepage": "https://github.com/GitbookIO/markup-it#readme",
  "peerDependencies": {
    "@gitbook/slate": "^4.0.0",
    "immutable": "^3.0.0 || ^4.0.0-rc"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@gitbook/slate": "^4.0.0",
    "@gitbook/slate-hyperscript": "^4.0.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^24.9.0",
    "eslint": "^4.10.0",
    "eslint-config-gitbook": "^2.0.3",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-prettier": "^2.6.0",
    "immutable": "^4.0.0-rc.12",
    "jest": "^24.9.0",
    "prettier": "^1.13.3",
    "rollup": "^1.27.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2"
  },
  "dependencies": {
    "@gitbook/slate-hyperprint": "^2.2.5",
    "detect-newline": "^2.1.0",
    "entities": "^1.1.1",
    "escape-string-regexp": "^1.0.5",
    "front-matter": "^2.1.2",
    "html": "^1.0.0",
    "htmlclean": "^2.7.8",
    "htmlparser2": "3.9.2",
    "indent-string": "2.1.0",
    "is": "^3.2.0",
    "is-absolute-url": "^3.0.0",
    "js-yaml": "^3.7.0",
    "ltrim": "0.0.3",
    "rtrim": "0.0.3",
    "split-lines": "^1.1.0",
    "trim-newlines": "^1.0.0",
    "trim-right": "^1.0.1",
    "trim-trailing-lines": "^1.1.0",
    "uid": "0.0.2",
    "warning": "^3.0.0"
  },
  "bin": {
    "markup-toJSON": "./bin/toJSON.js",
    "markup-toHTML": "./bin/toHTML.js",
    "markup-toMarkdown": "./bin/toMarkdown.js",
    "markup-lint": "./bin/lint.js"
  },
  "sideEffects": false
}
